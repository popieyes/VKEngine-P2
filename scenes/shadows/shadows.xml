		<position name="position" value="0.25 0.5 0.5"/>
		<attenuation name="attenuation" value="1.0 0.09 0.032"/>
		<radiance name="radiance" value="0.2 0.2 0.8"/>
	</emitter> -->
	

	
</scene>
